<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UC_Student_App_FinalProj.MajorSelectionPage">
    <StackLayout Padding="20">
        <Label Text="Select Your Major" FontSize="24" HorizontalOptions="Center"/>
        <Picker x:Name="majorPicker">
            <Picker.Items>
                <x:String>Computer Science</x:String>
                <x:String>Engineering</x:String>
                <x:String>Business</x:String>
                <x:String>Biology</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Continue" Clicked="OnContinueClicked"/>
    </StackLayout>
</ContentPage>

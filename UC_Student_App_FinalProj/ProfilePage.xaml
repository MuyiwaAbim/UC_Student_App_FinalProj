<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UC_Student_App_FinalProj.ProfilePage"
             Title="Profile Page">


    <ScrollView>
        <StackLayout Padding="20" Spacing="25" VerticalOptions="Center">

            <!-- Profile Image -->
            <Image Source="profile_placeholder.jpg" 
                   HeightRequest="120" 
                   WidthRequest="120" 
                   HorizontalOptions="Center" />

            <!-- User Name -->
            <Label Text="Name: John Doe"
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <!-- User Major -->
            <Label Text="Major: Computer Science"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="Gray" />

        </StackLayout>
    </ScrollView>


</ContentPage>

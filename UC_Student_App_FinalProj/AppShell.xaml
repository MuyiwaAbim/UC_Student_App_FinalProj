<Shell
    x:Class="UC_Student_App_FinalProj.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UC_Student_App_FinalProj"
    Shell.FlyoutBehavior="Flyout"
    Title="UC_Student_App_FinalProj">

    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Major Selection"
        ContentTemplate="{DataTemplate local:MajorSelectionPage}"
        Route="MajorSelectionPage" />

    <ShellContent
        Title="Posts"
        ContentTemplate="{DataTemplate local:PostsPage}"
        Route="PostsPage" />

    <!-- Additional pages that are not yet populated -->
    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="ProfilePage" />

   

</Shell>
